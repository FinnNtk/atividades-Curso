import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        int idade;
        String nome;
        int num1;
        int num2;
        int soma;
        double mult;
        double div;
        double mod;


        Scanner scanner = new Scanner(System.in);
        System.out.println("Digite o sua idade: ");
        idade = scanner.nextInt();
        System.out.println("Digite o seu nome: ");
        nome = scanner.next();
        System.out.println("Digite um numero para ser feito a  soma: ");
        num1 = scanner.nextInt();
        System.out.println("Digite outro numero: ");
        num2 = scanner.nextInt();
        soma = num1 + num2;
        System.out.println("o resultado dessa soma é: " + soma);
        mult = num1 * num2;
        System.out.println("A multiplicação desses numeros é: " +mult);
        div = num1 / num2;
        System.out.println("A divisão desses numeros é: " +div);
        mod = num1 % num2;
        System.out.println("O modulo desses numeros é: " +mod);

        scanner.close();

    }
}
